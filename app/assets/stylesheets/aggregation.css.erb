.aggregation_box {
    padding: 15px 15px;
    background-image: url(<%= asset_path 'explore/PlaceContainerBG.png' %>);
    background-repeat: repeat;
    -moz-box-shadow: inset 0 0 30px #4D4D4D;
    -webkit-box-shadow: inset 0 0 30px #4D4D4D;
    box-shadow: inset 0 0 30px #4D4D4D;
}

.aggregation_perspective {
    padding: 10px 10px;
    height: 350px;
    width: 500px;
    background-image: url(<%= asset_path 'explore/NotesInsetBG.png' %>);
    background-repeat: repeat;
    -moz-box-shadow: inset 0 0 10px #4D4D4D;
    -webkit-box-shadow: inset 0 0 10px #4D4D4D;
    box-shadow: inset 0 0 10px #4D4D4D;
}

.aggregation_box {
    color: white;
}

.preview_user_thumb {
    width: 50px;
    float: left;
}

.tiny_styled_thumb {
    border: 4px solid white;
    background: #faf9f7;
    box-shadow: 0 0 3px 0 #888;
    max-width: 48px;
    height: 48px;
}

.tiny_user_info {
    margin-left: 60px;
}

.place_title {
    font-size: 44px;
    font-family: londrina;
    margin-bottom: 6px;
    margin-top: 10px;
}

.perspective_text {
    font-size: 12px;
}

.perspective_text a {
    font-weight: bold;
    color: white;
}