#answer_list {
    width: 100%;
}

hr.questions {
    width: 100%;
    height: 0;
    color: #7b7972;
    background: none;
    border: none;
    border-top: 1px solid #7b7972;
    border-bottom: 1px solid #fff;
}

.styled_question_pic {
    height: 35px;
    width: 35px;
    border: 3px solid white;
    background: #faf9f7;
    box-shadow: 0 0 8px 0 #888;
}

#question_member {
    height: 100px;
    float: left;
    width: 550px;
}

#question_title {
    font-family: museoSlab, Verdana;
    font-size: 22px;
}

#city_prompt {
    font-family: museoSlab, Verdana;
    font-size: 30px;
    margin-top: 25px;
    color: white;
}

#question_title_copy {
    font-family: museoSlab, Verdana;
    font-size: 22px;
    color: white;
    padding-top: 1px;
    color: #B7614B;
}

#question_prompt {
    font-family: museo, Verdana;
    font-size: 20px;
    color: white;
    padding-top: 1px;
}

.question_share_prompt {
    font-family: museoSlab, helvetica;
    color: #7b7972;
    font-size: 20px;
    padding-top: 1px;
}

.user_asked, .user_asked a {
    font-family: marketingScript, helvetica;
    font-size: 15pt;
    color: white;
    opacity: 0.7;
    filter: alpha(opacity = 70);
}

.question_field_box {
    font-family: Verdna;
    font-size: 18px;
    width: 300px;
}

.social_share img {
    max-height: 48px;
}

#question_share {
    float: left;
    margin: 50px 0 0 110px;
}

#suggestion_tally {
    width: 100%;
    text-align: right;
    font-family: museo, verdana;
    font-size: 20px;
    color: #7b7972;
    margin: 0 0 3px 0;
}

#header_content {
    width: 900px;
    margin: 0 auto;
}

#question_header {
    background-image: url(<%= asset_path 'top_texture.png' %>);
    box-shadow: 0 0 5px #888;
    padding: 0px;
    min-height: 115px;
    width: 100%;
}

.question_clear {
    clear: both;
}

#question_main {
    width: 900px;
    margin: 30px auto;

}

.question_placemark_img {
    width: 100px;
}

#question_left_column {
    float: left;
    width: 500px;
}

#question_right_column {
    float: left;
    padding: 20px 0 0 40px;
}

.question_map {
    border: 9px solid white;
    background: #faf9f7;
    box-shadow: 0 0 3px 3px #7b7972;
    margin: 0 15px;
}

.question_map_holder {
    margin-top: 10px;
    height: 160px;
}

.question_poster_username {
    padding-top: 10px;
}

#answer_publisher {
    height: 60px;

}

.right_info {
    margin: 0 auto;
    max-width: 250px;
    text-align: center;
}

#create_own_prompt {
    margin-top: 30px;
    margin-bottom: 10px;
    font-size: 20px;
    font-family: museoSlab, helvetica;
    color: #7b7972;
}

#other_questions_prompt {
    font-size: 20px;
    font-family: museoSlab, helvetica;
    color: #7b7972;
}

#other_questions {
    font-size: 15px;
    font-family: museo, verdana;
}

.win_votes {
    text-align: center;
    font-family: museoSlab, verdana;
    font-weight: bold;
    font-size: 24px;
    color: #7b7972;
    margin-top: 5px;
}

.place_name, .place_name a {
    font-weight: bold;
    font-size: 14pt;
    font-family: museoSlab;
}

#answer_place {
    font-family: museoSlab, helvetica;
    font-size: 14pt;
    width: 450px;
    height: 30px;
    background-color: rgba(0, 0, 0, 0.04);
}

.place_answer {
    display: block;
    width: 100%;
}

.colored_place_row {
    background-color: rgba(0, 0, 0, 0.04);
}

.posted_at {
    font-size: 12px;
    font-family: museo, verdana;
    color: #7b7972;

}

.left_place_column {
    float: left;
    padding-top: 5px;
    min-width: 40px;
}

.center_place_column {
    float: left;
    max-width: 290px;
    margin-left: 10px;
    padding-top: 5px;
}

.placemark_button {
    top: 16px;
    position: relative;
}

.right_place_column {
    float: right;
}

.address_text {
    font-family: museoSlab, verdana;
    font-size: 12px;
    color: #7b7972;
}