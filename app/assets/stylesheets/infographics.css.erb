#infographic_and_signup {
  width: 1010px;
}

.infographic_holder {
  margin-left:20px;
  margin-top:20px;
  margin-bottom:20px;
}

.infographic {
  border: 5px solid white;
  box-shadow: 0 0 6px 0 #888888;
}

#infographic_call_to_action {
  width: 235px;
  height: 130px;
  text-align: center;
  border: 5px solid white;
  box-shadow: 0 0 6px 0 #888888;
  background-image: url(<%= asset_path 'top_texture.png' %>);
}

#infographic_sell {
  font-size: 24px;
  color: #f8edd5;
  font-family: "Museo", Verdana, Helvetica, sans-serif;
  padding: 10px 0px;
}

#infographic_register {
  background-image: url(<%= asset_path 'red_background.png' %>);
  border: 2px solid #BF4F41;
  border-radius: 5px 5px 5px 5px;
  color: white;
  font-size: 18px;
  font-weight: bold;
  padding: 5px;
  text-align: center;
  width: 200px;
  margin-left: auto;
  margin-right: auto;
}

#infographic_link {
  text-decoration: none;
}

#infographic_action_holder {
  width: 700px;
}

#infographic_actions {
  margin:30px;
  width: 200px;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}

.infographic_share {
  vertical-align: middle;
}

.infographic_mini_text {
  font-size: 12px;
}

#infographic_social_share {
  margin-top: 25px;
  margin-left: auto;
  margin-right: auto;
  width: 100px;
}