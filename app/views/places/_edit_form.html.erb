<div id="new_place_holder">
  <div class="callout"><%= t('place.edit_place') %></div>
  <div class="story_text">
    <%= form_for @place do |f| %>
      <% if @place.errors.any? %>
        <div id="error_explanation">
          <p><%= t('place.fix') %></p>
          <ul class="error_reasons">
          <% @place.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="standout">
        <p class="label emphasize"><%= t'place.name' %></p>
        <%= f.text_field :name, :class => "entry_field" %>
      </div>
      
      <div class="standout">
        <p class="label emphasize"><%= t'place.phone' %></p>
        <%= f.text_field :phone_number, :class => "entry_field" %>
      </div>
      
      <div class="standout">
        <p class="label emphasize"><%= t'place.url' %></p>
        <%= f.text_field :venue_url, :class => "entry_field" %>
      </div>
      
      <div class="standout">
        <p class="label emphasize"><%= t'place.twitter' %></p>
        <%= f.text_field :twitter, :class => "entry_field" %>
      </div>
      
      <div id="create_or_cancel">
        <span class="cancel">
          <a href="<%= place_path @place %>"><%= t ('place.cancel') %></a>
        </span>
        <%= f.submit "Save", :class=> "submit" %>
      </div>
    <% end %>
  </div>
</div>