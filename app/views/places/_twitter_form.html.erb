<div id="new_place_holder">
  <div class="callout">Add/Edit A Twitter Handle</div>
  <div class="story_text">
    <%= form_for @place do |f| %>
      <% if @place.errors.any? %>
        <div id="error_explanation">
          <p><%= t('place.fix') %></p>
          <ul class="error_reasons">
          <% @place.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="standout">
        <p class="label emphasize">Twitter</p>
        <%= f.text_field :twitter, :class => "entry_field" %>
      </div>
      <div id="create_or_cancel">
        <span class="cancel">
          <a href="<%= place_path @place %>"><%= t ('place.cancel') %></a>
        </span>
        <%= f.submit "Save", :class=> "submit" %>
      </div>
    <% end %>
  </div>
</div>