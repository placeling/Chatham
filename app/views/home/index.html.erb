            </li>
            <li>
              <div class="stay_in_touch_wrapper"><a href="http://blog.placeling.com"><%= image_tag "home/tumblr_icon.png", :alt=>"Blog", :id=>"blog" %></a></div>
            </li>
          </ul>
          <div>
            <a href="<%= new_user_registration_path %>"><%= image_tag "home/sign_up_banner.png", :alt=>"Sign Up", :id=>"sign_up"%></a>
          </div>
        </div>
