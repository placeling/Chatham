    <area onfocus="blur();" shape="rectangle" coords="403,33,732,215" href="<%= guide_path %>">
    <area onfocus="blur();" shape="polygon" coords="738,166,755,164,838,130,933,169,933,213,920,225,923,286,753,286,750,220,736,211,736,211,735,181" href="<%= new_user_registration_path %>">
