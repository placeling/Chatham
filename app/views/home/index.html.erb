<% content_for :head do %>
  <title><%= t('home.marketing') %></title>
  <meta name="description" content="<%= t('home.description')%>">
  <meta property="og:title" content="Placeling" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://www.placeling.com" />
  <meta property="og:image" content="https://www.placeling.com/images/logo.png" />
<% end %>

<% content_for :css do %>
  #container {
    min-height: 0px;
    background: #D5F1FA;
  }
  
  #wrapper {
    padding-bottom: 0px;
    overflow-x: hidden;
  }
  
  #footerbottom {
    margin-top:0px;
    clear: none;
  }
<% end %>

<% content_for :javascript do %>
<script type="text/javascript">
  $(document).ready(function() {
    var minWidth = parseInt($("#clear_bg").css("width"));
    
    $(window).resize(function() {
      if ($(window).width() < minWidth) {
        $("#clear_bg").css("margin-left", -1*(minWidth-$(window).width())/2 + "px");
      } else {
        $("#clear_bg").css("margin-left","auto");
      }
            
      $("#footerbottom").height($(window).height() - $('#container').outerHeight(true));      
    });
    $(window).resize();
  });
  $(window).load(function() {
    $("#binoculars").hover(
      function() {
        $(this).attr("src", '<%= path_to_image("home/binoculars_hover.png") %>');
      }, 
      function() {
        $(this).attr("src", '<%= path_to_image("home/binoculars.png") %>');
      }
    );
    $("#iphone").hover(
      function() {
        $(this).attr("src", '<%= path_to_image("home/iphone_hover.png") %>');
      }, 
      function() {
        $(this).attr("src", '<%= path_to_image("home/iphone.png") %>');
      }
    );
    $("#paper_plane").hover(
      function() {
        $(this).attr("src", '<%= path_to_image("home/paper_plane_hover.png") %>');
      }, 
      function() {
        $(this).attr("src", '<%= path_to_image("home/paper_plane.png") %>');
      }
    );
    $("#facebook").hover(
      function() {
        $(this).attr("src", '<%= path_to_image("home/facebook_hover.png") %>');
      }, 
      function() {
        $(this).attr("src", '<%= path_to_image("home/facebook.png") %>');
      }
    );
    $("#twitter").hover(
      function() {
        $(this).attr("src", '<%= path_to_image("home/twitter_hover.png") %>');
      }, 
      function() {
        $(this).attr("src", '<%= path_to_image("home/twitter.png") %>');
      }
    );
    $("#blog").hover(
      function() {
        $(this).attr("src", '<%= path_to_image("home/tumblr_hover.png") %>');
      }, 
      function() {
        $(this).attr("src", '<%= path_to_image("home/tumblr.png") %>');
      }
    );
    $("#sign_up").hover(
      function() {
        $(this).css({opacity:0.5});
      }, 
      function() {
        $(this).css({opacity:1.0});
      }
    );
  });
</script>
<% end %>

