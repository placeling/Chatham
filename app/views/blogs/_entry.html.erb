<div class="entry_spacer">
  <h2><%= link_to(entry.title, entry.url, :target => :blank) %></h2>
  <% if entry.published %>
    <p class="entry_date_time"><%= entry.published.strftime("%d %b %y %H:%M") %></p>
  <% end %>
  <% if entry.place %>
    <p class="tagged_place">Place: <%= entry.place.name %>. <%= link_to("Change", place_blog_entry_path(entry._parent._id, entry.id), :class=>"tagged_place")%> | <%= link_to("Remove", remove_blog_entry_path(entry._parent._id, entry.id), :method=>'post', :confirm=>"Remove place?")%> | <%= link_to("Edit place", edit_place_path(entry.place.slug), :target => :blank)%> <% if entry.place.twitter.nil? or entry.place.twitter.length < 5 %>| <%= link_to("Add Twitter", twitter_place_path(entry.place.slug), :target => :blank)%><% end %></p>
  <% else %>
    <p class="tagged_place">No location tagged <%= link_to("Add one", place_blog_entry_path(entry._parent._id, entry.id), :class=>"tagged_place")%></p>
  <% end %>
  <% if entry.content %>
  <div class="entry_content">
    <%= entry.content.html_safe %>
  </div>
  <% end %>
</div>