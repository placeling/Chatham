<div id="results">
  <% if @results.length > 0 %>
    <div id="results_header"><%=t('search.results') %> <span id="search_term"><%= @input %></span></div>
    <ul>
      <% @results.each do |result|%>
        <li class="result">
          <% if result["pic"].nil? %>
            <div><%= link_to (result["name"], result["url"], :class =>"result_name") %></div>
            <div class="result_location"><%= result["location"] %></div>
          <% else %>
            <div class="result_image_holder">
              <img src='<%= result["pic"] %>' class="result_image"/>
            </div>
            <div class="result_description">
              <div><%= link_to (result["name"], result["url"], :class =>"result_name") %></div>
              <div class="result_location"><%= result["location"] %></div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div id="no_results"><%=t('search.no_results') %> <span id="search_term"><%= @input %></span></div>
  <% end %>
</div>