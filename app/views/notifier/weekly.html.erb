<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

  <%= stylesheet_link_tag '/stylesheets/mailers/email' %>

</head>
<body class="email_body">
<table width="100%" id="background" border="0" cellpadding="0" cellspacing="0">
  <tr class="email_tr">
    <td align="center" valign="top" class="table_style">
      <table width="660" id="main" border="0" cellpadding="0" cellspacing="0" class="email_table">
        <tr class="email_tr">
          <td width="100%" colspan="3" class="table_style">
            <p class="email_right">
              <img src="https://www.placeling.com/assets/logo.png"><a href="<%= root_url() %>"></a>
              <%= vanity_tracking_image(Vanity.context.vanity_identity, :open_email, :host => ActionMailer::Base.default_url_options[:host]) %>
            </p>
          </td>
        </tr>
        <!-- Intro -->
        <tr class="email_tr">
          <td width="100%" colspan="3" class="table_style">
            <p class="email_emphasize"><%= t('weekly.intro') %></p>

            <p class="question_content email_italics"><%= t('weekly.weekend') %></p>
          </td>
        </tr>

        <!-- Guides -->
        <% if @recos['guides'].length > 0 %>
            <tr class="email_tr">
              <td width="100%" colspan="3" class="table_style">
                <p class="email_emphasize email_spacer"><%= t('weekly.guides') %></p>
              </td>
            </tr>
            <tr class="email_tr">
              <% @recos['guides'].each do |guide| %>
                  <td valign="top" width="660" colspan="3" class="table_style">
                    <div class="email_guide_holder">
                      <div class="email_profile_pic">
                        <a href="<%= vanity_track_url_for(Vanity.context.vanity_identity, :click_user, :controller => "users", :action => "show", :id => guide.username, :host => ActionMailer::Base.default_url_options[:host]) %>" class="email_link"><img src="<%= guide.thumb_url %>" class="email_profile_pic_large"></a>
                      </div>
                      <div class="email_username_and_description">
                        <a href="<%= vanity_track_url_for(Vanity.context.vanity_identity, :click_user, :controller => "users", :action => "show", :id => guide.username, :host => ActionMailer::Base.default_url_options[:host]) %>" class="email_link">
                          <div class="email_profile_name"><%= guide.username %></div>
                        </a>
                        <% if guide.description && guide.description.length > 0 %>
                            <div class="email_description email_mini_spacer"><%= guide.description %></div>
                        <% end %>
                      </div>
                    </div>
                  </td>
              <% end %>
            </tr>
        <% end %>

        <!-- Places -->
        <% if @recos['places'].length > 0 %>
            <%= render :partial => "single_place_suggest", :locals => {:place => @recos['places'].first} %>
        <% end %>

        <!-- Tours -->
        <% if @recos['tours'].length > 0 %>
            <tr class="email_tr">
              <td width="100%" colspan="3" class="table_style">
                <p class="email_emphasize email_spacer"><%= t('weekly.tours') %></p>
              </td>
            </tr>
            <tr class="email_tr">
              <% @recos['tours'].each do |tour| %>
                  <td valign="top" width="220" colspan="1" class="table_style">
                    <a href="<%= vanity_track_url_for(Vanity.context.vanity_identity, :click_tour, :controller => "tours", :action => "show", :user_id => tour.user.username, :id => tour.slug, :host => ActionMailer::Base.default_url_options[:host]) %>">
                      <div class="venue_pic_holder email_mini_spacer">
                        <img src="<%= tour.random_photo[0].mosaic_3_3_url %>" class="email_place_pic">
                      </div>
                    </a>
                  </td>
                  <td valign="top" width="440" colspan="1" class="table_style">
                    <div class="email_place_and_testimonial">
                      <div>
                        <a href="<%= vanity_track_url_for(Vanity.context.vanity_identity, :click_tour, :controller => "tours", :action => "show", :user_id => tour.user.username, :id => tour.slug, :host => ActionMailer::Base.default_url_options[:host]) %>" class="email_link email_embiggen_more"><%= tour.name %></a>
                      </div>
                      <div>
                        <p class="email_memo"><%= simple_format(tour.description, :class => "email_memo") %></p>

                        <p class="email_mini_spacer">-
                          <a href="<%= vanity_track_url_for(Vanity.context.vanity_identity, :click_user, :controller => "users", :action => "show", :id => tour.user.username, :host => ActionMailer::Base.default_url_options[:host]) %>" class="email_link"><%= tour.user.username %></a>
                        </p>
                      </div>
                    </div>
                  </td>
              <% end %>
            </tr>
        <% end %>

        <!-- Questions -->
        <tr class="email_tr">
          <td width="100%" colspan="3" class="table_style">
            <p class="email_emphasize email_spacer"><%= t('weekly.answers') %></p>
          </td>
        </tr>

        <!-- Wrap up -->
        <tr class="email_tr">
          <td width="100%" colspan="3" class="table_style">
            <p class="question_content" style="margin-top:25px;font-style:italic;"><%= t('weekly.all') %></p>

            <p class="question_content" style="font-style:italic;"><%= t('weekly.team') %></p>
          </td>
        </tr>

        <!-- Change location -->
        <tr class="email_tr">
          <td width="100%" colspan="3" class="table_style">
            <p class="change_city question_content">
              <% if @user.city && @user.city.length > 0 %>
                  <%= t('weekly.reco_info') %> <%= @user.city %>.
                  <a href="<%= location_user_url(@user) %>" style="color: #E08574;"><%= t('weekly.change_city') %></a>.
              <% else %>
                  <%= t('weekly.reco_wrong') %>
                  <a href="<%= location_user_url(@user) %>" style="color: #E08574;"><%= t('weekly.change_your_city') %></a>.
              <% end %>
            </p>
          </td>
        </tr>

        <!-- Legal stuff -->
        <tr class="email_tr">
          <td width="100%" colspan="3" style="background-color: #FAF9F7;font-size: 10px;font-family: 'Trebuchet MS',Helvetica,Arial,sans-serif; color:#666">
            <p class="email_content" style="margin-top:20px;"><%= t('notify.sent') %> <%= @user.email %></p>

            <p class="email_content"><%= t('notify.no_more') %>
              <a href="<%= unsubscribe_users_url(:ck => @user.crypto_key) %>" style="color: #E08574;"><%= t('user.unsubscribe') %></a>
            </p>

            <p class="email_content"><%= t('notify.address') %></p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
</body>
</html>

