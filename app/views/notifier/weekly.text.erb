<%= t('weekly.intro') %>
<%= t('weekly.weekend') %>
<% if @recos['guides'].length > 0 %>


    <%= t('weekly.guides') %>
    <%= t('weekly.guides_why') %>

    <% @recos['guides'].each do |guide| %>
        <%= guide.username %> :: <%= vanity_track_url_for(Vanity.context.vanity_identity, :click_place, :controller => "users", :action => "show", :id => guide.username, :host => ActionMailer::Base.default_url_options[:host]) %>
    <% end %>
<% end %>
<% if @recos['places'].length > 0 %>


    <%= t('weekly.explore') %>
    <%= t('weekly.explore_why') %>

    <% @recos['places'].each do |place| %>
        <%= place.place.name %> :: <%= vanity_track_url_for(Vanity.context.vanity_identity, :click_place, :controller => "places", :action => "show", :id => place.place.slug, :host => ActionMailer::Base.default_url_options[:host]) %>
    <% end %>
<% end %>


<%= t('weekly.all') %>
<%= t('welcome.support') %>: support@placeling.com.
<%= t('weekly.team') %>





<% if @user.city && @user.city.length > 0 %>
    <%= t('weekly.reco_info') %> <%= @user.city %>. <%= t('change_city') %>:
<% else %>
    <%= t('weekly.reco_wrong') %> <%= t('weekly.change_your_city') %>:
<% end %>
<%= location_user_url(@user) %>


<%= t('notify.sent') %> <%= @user.email %>

<%= t('notify.no_more') %> <%= t('notify.change') %> <%= t('notify.settings') %>:
