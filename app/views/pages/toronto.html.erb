<% content_for :head do %>
  <title>The Best of Toronto</title>
  <meta name="description" content="The best of Toronto. Powered by Placeling" />
  <meta property="og:title" content="The Best of Toronto. Powered by Placeling" />
  <meta property="og:image" content="<%= asset_path("infographics/toronto_og.jpg") %>">
<% end %>

<% content_for :javascript do %>
    <script type="text/javascript">
        $(window).load(function () {
            $(function () {
                $("#sign_up_banner").jScroll();
            });
        });
    </script>
<% end %>

