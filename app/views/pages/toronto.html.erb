  <div class="infographic_holder">
    <a href="<%= new_user_registration_path %>"><img src="<%= asset_path("infographics/toronto_small.jpg") %>" class="infographic"></a>
    <div id="infographic_action_holder">
      <div id="infographic_actions">
        <span class="social">
          <a href="<%= asset_path("infographics/toronto_large.jpg") %>" class="infographic_mini_text">High Res</a>          
        </span>
      </div>
    </div>
  </div>
</div>