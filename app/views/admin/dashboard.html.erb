
<h1>Dashboard</h1>


<b>Users:</b> <%= @user_count %>


<table border="1">
    <thead>
      <tr>
      <td>Username</td>
      <td>Email</td>
      <td>FacebookId</td>
      <td>Description</td>
      <td>Created_at</td>
      <td>Bookmark Count</td>
    </thead>

  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.facebook_id %></td>
      <td><%= user.description %></td>
      <td><%= user[:created_at] %></td>
      <td><%= user.perspectives.count %></td>
    </tr>
  <% end %>

</table>