<li id="<%= answer.id %>" class="place_answer">
  <div class="left_place_column" style="">
    <span class="win_votes"><%= answer.upvotes %></span>
    <%= link_to image_tag( upvote_icon( answer, current_user, request.session_options ) ), upvote_question_answer_path(answer.question, answer),
                :class=>"up_vote", :remote =>true, :method=>:post %>
  </div>

  <div class="center_place_column">
      <b><%= link_to answer.place.name, answer.place  %></b>
      <div class="address_text">
        <%= answer.place.street_address %>&nbsp;|&nbsp;<%= answer.place.city_data %>
      </div>
  </div>

  <div class="right_place_column">
    <% if !current_user || !current_user.perspective_for_place( answer.place ) %>
      <span id="<%= answer.place.id %>"><a rel="nofollow" data-remote="true" href="<%= new_place_perspective_path(answer.place) %>"><%= image_tag "NewPlacemark.png", :alt=>"placemark", :class=>"question_placemark_img" %></a></span>
    <% end %>
  </div>

</li>