      <%= f.label :css %>
      <br/>
      <%= f.text_field :css %>
    </div>
    <div class="field">
      <%= f.label :footerpng %>
      <br/>
      <%= f.text_field :footerpng %>
    </div>
    <div class="field">
      <%= f.label :wellpng %>
      <br/>
      <%= f.text_field :wellpng %>
    </div>
    <div class="field">
      <%= f.label :liquid %>
      <br/>
      <%= f.text_field :liquid %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
