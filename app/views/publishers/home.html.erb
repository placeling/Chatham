<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <title><%= @publisher.user.username %></title>

  <style type="text/css">
      <%= raw liquidize @publisher.css_liquid_template, nil %>
  </style>

  <script type="text/javascript">
      $(document).ready(function () {
          $('a').each(function () {
              $(this).bind('click', function () {
                  var theURL = this.getAttribute('href');
                  var eventObject = new Object;
                  var a = 'URL';
                  eventObject[a] = theURL;
                  // Fire Titanium Event to Open the URL in a new Window
                  Ti.App.fireEvent('openLink', eventObject);
                  return false;
              });
          })
      });
  </script>

</head>
<body>
<%= raw liquidize @publisher.home_liquid_template, 'publisher' => @publisher %>
</body>
</html>

