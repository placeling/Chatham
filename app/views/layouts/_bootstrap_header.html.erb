<% content_for :javascript do %>
    <script type="text/javascript">
        $(document).ready(function () {
            var copy = "<%= t('header.call_to_action') %>"
            $("#term").val(copy);
            $("#term").css({'color':'grey'});

            $("#term").focus(function () {
                this.value = "";
                $(this).css({'color':'black'});
            })

            $("#term").blur(function () {
                if (this.value == '') {
                    this.value = copy;
                    $(this).css({'color':'grey'});
                }
            })
        });
        $(window).load(function () {
            firstRun();
        });
    </script>
<% end %>


<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <a class="btn btn-navbar pad_top holder" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a class="brand" href="/" id="logo"><%= image_tag "logo.png" %></a>


    <div class="nav-collapse pull-right">
      <%= form_tag(search_path, :method => "get", :class => "navbar-form pull-left") do %>
          <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;"/></div>
          <%= hidden_field_tag(:lat) %>
          <%= hidden_field_tag(:lng) %>
          <%= text_field_tag(:term, "", :class => "navbar-search") %>
          <div style="display:inline">
            <input type="image" src="<%= asset_path "header/searchGlyph.png" %>" class="header_icon hide-phone" value="submit" id="search_submit">
          </div>
      <% end %>
      <ul class="nav ">

        <% if current_user %>
            <li>
              <a href="<%= (account_user_path :id => current_user) %>"><%= image_tag current_user.thumb_url, :class => "you", :alt => t("user.your_account") %></a>
            </li>
            <li class="holder light_pad_top"><%= link_to image_tag(asset_path("header/mapGlyph.png"), :alt => t("user.you"), :class => "header_icon"), user_path(current_user) %></li>
