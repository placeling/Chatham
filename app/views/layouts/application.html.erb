<!DOCTYPE html>
<html>
<head>
  <title><%= t('home.product_name') %></title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
<%= render(:partial =>"layouts/header_imports") %>
  </head>
  <body id="homepage">

    <p><a class="skiplink" href="#maintontent">skip over navigation</a></p>
    <div id="container">

        <div id="wrapper">
            <%= render :partial => 'layouts/header' %>

            <div id="content">
                <% if notice %>
                    <p><%= notice %></p>
                <% end %>

                <% if alert %>
                    <p><%= alert %></p>
                <% end %>
                <div id="maincontent">
                    <%= yield %>
                </div>

                <div id="nav">

                  <div class="boxnav">
                    <%= render(:partial =>"layouts/like_box") %>
                   </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <%= render :partial => 'layouts/footer' %>
    </div>

<%= render(:partial =>"layouts/footer_imports") %>

<%= yield :javascript %>
</body>
</html>
