<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
  <%= yield :head %>
  <%= favicon_link_tag %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render(:partial =>"layouts/header_imports") %>
  <style type="text/css">
    <%= yield :css %>
  </style>
  <!--[if !IE 7]>
    <style type="text/css">
      #wrap {display:table;height:100%}
    </style>
  <![endif]-->
</head>
<body <%= yield :body %>>
  <div id="container">
    <div id="wrapper">
      <%= render :partial => 'layouts/header' %>
      <div id="content">
        <% if notice %>
          <div id="notice" class="flash">
          <% notice.each do |key, value| %>
            <%= content_tag :div, value unless value.blank? %>
          <% end %>
          </div>
        <% end %>
        <% if alert %>
          <div id="alert" class="flash">
          <% alert.each do |key, value| %>
            <%= content_tag :div, value unless value.blank? %>
          <% end %>
          </div>
        <% end %>
        <div id="maincontent">
            <%= yield %>
        </div>
      </div>
    </div>
  </div>
  <%= render :partial => 'layouts/footer' %>
  <%= render(:partial =>"layouts/footer_imports") %>
  <%= yield :javascript %>
</body>
</html>
