<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
  <meta property="og:site_name" content="Placeling"/>
  <meta property="fb:app_id" content="280758755284342"/>

  <%= yield :head %>
  <%= favicon_link_tag %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag "bootstrap" %>
  <!-- Social widgets -->
  <script charset="utf-8" src="//platform.twitter.com/widgets.js" type="text/javascript"></script>

  <%= javascript_include_tag "externals" %>
  <%= javascript_include_tag "application" %>

  <% if notice %>
      <script type="text/javascript">
          $(document).ready(function () {
              noty({
                  text:'<%= notice unless notice.blank? %>',
                  layout:'topRight',
                  type:"information",
                  timeout:5000
              });
          });
      </script>

  <% end %>
  <% if alert %>
      <script type="text/javascript">
          $(document).ready(function () {
              noty({
                  text:'<%= alert unless alert.blank? %>',
                  layout:'topRight',
                  type:"error",
                  timeout:5000
              });
          });
      </script>

  <% end %>

  <%= yield :javascript_includes %>

  <style type="text/css">
      .ui-autocomplete {
          font-size: 62.5%;
      }

      <%= yield :css %>
  </style>
</head>
<body>
<input type="hidden" id="default_lat" name="default_lat" value="<%= @default_lat %>"/>
<input type="hidden" id="default_lng" name="default_lng" value="<%= @default_lng %>"/>
<!--[if lte IE 7]>
<script src="javascripts/ie6/warning.js"></script>
<script>window.onload = function () {
    e("javascripts/ie6/")
}</script><![endif]-->

<%= render 'layouts/bootstrap_header' %>

<div id="main" class="container" role="main">
  <%= yield %>
</div>
<footer>
  <%= render :partial => 'layouts/footer' %>
</footer>

<script type="text/javascript">

    var default_lat = $("#default_lat").val();
    var default_lng = $("#default_lng").val();

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-25331124-1']);
    _gaq.push(['_setDomainName', 'placeling.com']);
    _gaq.push(['_trackPageview']);

    (function () {
        var ga = document.createElement('script');
        ga.type = 'text/javascript';
        ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(ga, s);
    })();

</script>
<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s);
    js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
<%= yield :javascript %>
</body>
</html>
